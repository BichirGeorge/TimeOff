@model DiscussionForum.Models.CreateThreadViewModel
@{
    ViewData["Title"] = "Create New Thread";
    var categoryId = (int)ViewData["CategoryId"];
}

<div class="row mb-3">
    <div class="col">
        <nav aria-label="breadcrumb">
            <ol class="breadcrumb">
                <li class="breadcrumb-item"><a asp-controller="Home" asp-action="Index">Home</a></li>
                <li class="breadcrumb-item"><a asp-controller="Category" asp-action="Index">Categories</a></li>
                <li class="breadcrumb-item"><a asp-controller="Category" asp-action="Threads" asp-route-id="@categoryId">Back to Category</a></li>
                <li class="breadcrumb-item active" aria-current="page">Create Thread</li>
            </ol>
        </nav>
    </div>
</div>

<div class="card">
    <div class="card-header">
        <h4 class="mb-0">@ViewData["Title"]</h4>
    </div>
    <div class="card-body">
        <form asp-action="Create" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <input type="hidden" asp-for="CategoryId" value="@categoryId" />

            <div class="mb-3">
                <label asp-for="Title" class="form-label">Thread Title</label>
                <input asp-for="Title" class="form-control" required />
                <span asp-validation-for="Title" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="Description" class="form-label">Content</label>
                <textarea asp-for="Description" class="form-control" rows="10" required></textarea>
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>

            <div class="mb-3 d-flex justify-content-between">
                <a asp-controller="Category" asp-action="Threads" asp-route-id="@categoryId" class="btn btn-outline-secondary">Cancel</a>
                <button type="submit" class="btn btn-primary">Create Thread</button>
            </div>
        </form>
    </div>
</div>
