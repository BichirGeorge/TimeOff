@model DiscussionForum.Models.ForumThread
@{
    ViewData["Title"] = "Delete Thread";
}

<div class="row mb-3">
    <div class="col">
        <nav aria-label="breadcrumb">
            <ol class="breadcrumb">
                <li class="breadcrumb-item"><a asp-controller="Home" asp-action="Index">Home</a></li>
                <li class="breadcrumb-item"><a asp-controller="Category" asp-action="Index">Categories</a></li>
                <li class="breadcrumb-item"><a asp-controller="Category" asp-action="Threads" asp-route-id="@Model.CategoryId">Back to Category</a></li>
                <li class="breadcrumb-item"><a asp-controller="Thread" asp-action="Details" asp-route-id="@Model.Id">@Model.Title</a></li>
                <li class="breadcrumb-item active" aria-current="page">Delete</li>
            </ol>
        </nav>
    </div>
</div>

<div class="card mb-4">
    <div class="card-header bg-danger text-white">
        <h4 class="mb-0">Warning: Delete Thread</h4>
    </div>
    <div class="card-body">
        <div class="alert alert-danger">
            <h5>Are you sure you want to delete this thread?</h5>
            <p>This will delete the thread and all its replies. This action cannot be undone.</p>
        </div>
        
        <div class="mt-4">
            <h5>Thread Information</h5>
            <dl class="row">
                <dt class="col-sm-2">Title</dt>
                <dd class="col-sm-10">@Model.Title</dd>
                
                <dt class="col-sm-2">Category</dt>
                <dd class="col-sm-10">@Model.Category.Name</dd>
                
                <dt class="col-sm-2">Created by</dt>
                <dd class="col-sm-10">@Model.Author.UserName on @Model.CreatedAt.ToString("MMM dd, yyyy HH:mm")</dd>
                
                <dt class="col-sm-2">Content</dt>
                <dd class="col-sm-10">@Model.Description</dd>
            </dl>
        </div>
        
        <form asp-action="DeleteConfirmed" method="post" class="mt-4">
            <input type="hidden" asp-for="Id" />
            <div class="d-flex">
                <button type="submit" class="btn btn-danger me-2">Confirm Delete</button>
                <a asp-action="Details" asp-route-id="@Model.Id" class="btn btn-outline-secondary">Cancel</a>
            </div>
        </form>
    </div>
</div>
