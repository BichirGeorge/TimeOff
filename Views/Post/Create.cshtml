@model DiscussionForum.Models.PostCreateViewModel
@{
    ViewData["Title"] = "Create Reply";
}

<h1>Add Reply</h1>

<hr />
<div class="row">
    <div class="col-md-8">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="ThreadId" />
            <div class="form-group mb-3">
                <label asp-for="Content" class="control-label">Reply Content</label>
                <textarea asp-for="Content" class="form-control" rows="6"></textarea>
                <span asp-validation-for="Content" class="text-danger"></span>
            </div>
            <div class="form-group mb-3">
                <input type="submit" value="Post Reply" class="btn btn-primary" />
                <a asp-controller="Thread" asp-action="Details" asp-route-id="@Model.ThreadId" class="btn btn-secondary">Cancel</a>
            </div>
        </form>
    </div>
</div>
