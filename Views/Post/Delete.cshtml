@model DiscussionForum.Models.Post
@{
    ViewData["Title"] = "Delete Reply";
}

<div class="row mb-3">
    <div class="col">
        <nav aria-label="breadcrumb">
            <ol class="breadcrumb">
                <li class="breadcrumb-item"><a asp-controller="Home" asp-action="Index">Home</a></li>
                <li class="breadcrumb-item"><a asp-controller="Thread" asp-action="Details" asp-route-id="@Model.ThreadId">Back to Thread</a></li>
                <li class="breadcrumb-item active" aria-current="page">Delete Reply</li>
            </ol>
        </nav>
    </div>
</div>

<div class="card mb-4">
    <div class="card-header bg-danger text-white">
        <h4 class="mb-0">Warning: Delete Reply</h4>
    </div>
    <div class="card-body">
        <div class="alert alert-danger">
            <h5>Are you sure you want to delete this reply?</h5>
            <p>This action cannot be undone.</p>
        </div>

        <div class="mt-4">
            <h5>Reply Information</h5>
            <dl class="row">
                <dt class="col-sm-2">Thread</dt>
                <dd class="col-sm-10">@Model.Thread.Title</dd>

                <dt class="col-sm-2">Posted by</dt>
                <dd class="col-sm-10">@Model.Author.UserName on @Model.CreatedAt.ToString("MMM dd, yyyy HH:mm")</dd>

                <dt class="col-sm-2">Content</dt>
                <dd class="col-sm-10">@Model.Content</dd>
            </dl>
        </div>
        <form asp-action="DeleteConfirmed" method="post">
            <input type="hidden" asp-for="Id" />
            <div class="d-flex justify-content-between">
                <a asp-controller="Thread" asp-action="Details" asp-route-id="@Model.ThreadId" class="btn btn-outline-secondary">Cancel</a>
                <button type="submit" class="btn btn-danger">Confirm Delete</button>
            </div>
        </form>
    </div>
</div>