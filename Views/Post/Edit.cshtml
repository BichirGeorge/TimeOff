@model DiscussionForum.Models.PostCreateViewModel
@{
    ViewData["Title"] = "Edit Post";
}

<h2>Edit Post</h2>

<form asp-action="Edit" method="post">
    <input type="hidden" asp-for="ThreadId" />
    <input type="hidden" name="id" value="@ViewBag.PostId" />

    <div class="form-group">
        <label asp-for="Content"></label>
        <textarea asp-for="Content" class="form-control" rows="6"></textarea>
        <span asp-validation-for="Content" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-primary">Save</button>
    <a asp-controller="Thread" asp-action="Details" asp-route-id="@Model.ThreadId" class="btn btn-secondary">Cancel</a>
</form>