@model List<DiscussionForum.Models.UserRoleViewModel>
@{
    ViewData["Title"] = "Admin Dashboard";
}

<h1>@ViewData["Title"]</h1>

<div class="row">
    <div class="col">
        <h2>User Management</h2>
        <table class="table table-striped">
            <thead>
                <tr>
                    <th>Username</th>
                    <th>Email</th>
                    <th>Roles</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var user in Model)
                {
                    <tr>
                        <td>@user.UserName</td>
                        <td>@user.Email</td>
                        <td>@string.Join(", ", user.Roles)</td>
                        <td>
                            <a asp-action="EditUserRoles" asp-route-userId="@user.UserId" class="btn btn-sm btn-primary">Edit Roles</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
